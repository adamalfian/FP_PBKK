<form class="form-horizontal" action="/tambahmahasiswa" method="POST">
    <div class="form-group">
      <label class="control-label col-sm-2">Kode Mata Kuliah:</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" placeholder="Enter NRP" name="nrp">
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2">Nama mata kuliah:</label>
      <div class="col-sm-10">          
        <input type="text" class="form-control"  placeholder="Enter Nama Lengkap" name="nama">
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2">Kelas:</label>
      <div class="col-sm-10">          
        <input type="password" class="form-control"  placeholder="Enter password" name="password">
      </div>
    </div>
    <div class="form-group">        
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-default">Submit</button>
      </div>
    </div>
  </form>